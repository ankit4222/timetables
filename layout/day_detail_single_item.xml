<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:elevation="2dp"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.timetable.utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivDayDetail"
            android:layout_margin="8dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDayDetail"
            android:textStyle="bold"
            android:text="Subjects"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivDayDetail"
            android:textSize="24sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimeDayDetail"
            android:textStyle="bold"
            android:text="Time"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/ivDayDetail"
            android:textSize="24sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
